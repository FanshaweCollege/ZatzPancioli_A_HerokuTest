
<div id="homeContainer" class="row">

    <div class="small-12 medium-12 large-12 columns">
        <img src="images/{{images.mainImage}}" alt="" id="banner">
    </div>

    <div id="desc" class="small-12 small-pull-12 medium-6 large-6 columns">
        <h1>{{text.title}}</h1>
        <h3>{{text.subTitle}}</h3>
        <p>{{text.about}}</p>
    </div>

    <div id="gallery" class="small-12 small-push-12 medium-6 large-6 columns text-center">
        <div id="mainImage">
            <img src="images/{{images.thumb1}}" id="selected">
        </div>

        <div class="thumbs">
            <img src="images/{{images.thumb1}}">
            <img src="images/{{images.thumb2}}">
            <img src="images/{{images.thumb3}}">
            <img src="images/{{images.thumb4}}">
            <img src="images/{{images.thumb5}}">
        </div>
    </div>

    <div id="featTitle" class="small-12 medium-12 large-12 columns text-center">
        <h1>{{text.featTitle}}</h1>
    </div>

    <div id="featBox" class="small-12 medium-12 large-12 columns">
        <div class="small-12 medium-6 large-6 columns">
            <ul>
                <li id="first"><i class="fas fa-check"></i>{{text.features.[0]}}</li>
                <li><i class="fas fa-check"></i>{{text.features.[1]}}</li>
                <li><i class="fas fa-check"></i>{{text.features.[2]}}</li>
                <li id="last"><i class="fas fa-check"></i>{{text.features.[3]}}</li>
            </ul>
        </div>
        <div class="small-12 medium-6 large-6 columns">
            <ul>
                <li><i class="fas fa-check"></i>{{text.features.[4]}}</li>
                <li><i class="fas fa-check"></i>{{text.features.[5]}}</li>
                <li><i class="fas fa-check"></i>{{text.features.[6]}}</li>
                <li><i class="fas fa-check"></i>{{text.features.[7]}}</li>
            </ul>
        </div>
    </div>

</div>
