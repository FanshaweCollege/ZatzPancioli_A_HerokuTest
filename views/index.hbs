
<div id="homeContainer">

    <div class="small-12 medium-12 large-12 columns">
        <img src="images/{{images.mainImage}}" alt="" id="banner">
    </div>

    <div class="gallery small-12 medium-6 large-6 columns">
        <div class="panel-main">
            <img src="images/{{images.thumb1}}" id="selected">
        </div>

        <div class="thumbs">
            <img src="images/{{images.thumb1}}">
            <img src="images/{{images.thumb2}}">
            <img src="images/{{images.thumb3}}">
            <img src="images/{{images.thumb4}}">
            <img src="images/{{images.thumb5}}">
        </div>
    </div>

    <div id="desc" class="small-12 medium-6 large-6 columns">
        <h1>{{text.title}}</h1>
        <h3>{{text.subTitle}}</h3>
        <p>{{text.about}}</p>
    </div>

</div>
